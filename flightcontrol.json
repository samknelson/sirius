{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "ci": {
    "type": "ec2",
    "instanceSize": "t3.large"
  },
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-east-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "sirius-app",
          "name": "Sirius Application",
          "type": "fargate",
          "buildType": "nixpacks",
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 1,
          "maxInstances": 3,
          "port": 3000,
          "healthCheckPath": "/api/health",
          "envVariables": {
            "NODE_ENV": "production"
          }
        }
      ]
    },
    {
      "id": "staging",
      "name": "Staging",
      "region": "us-east-1",
      "source": {
        "branch": "develop"
      },
      "services": [
        {
          "id": "sirius-app-staging",
          "name": "Sirius Application (Staging)",
          "type": "fargate",
          "buildType": "nixpacks",
          "cpu": 0.25,
          "memory": 0.5,
          "minInstances": 1,
          "maxInstances": 1,
          "port": 3000,
          "healthCheckPath": "/api/health",
          "envVariables": {
            "NODE_ENV": "production"
          }
        }
      ]
    },
    {
      "id": "preview",
      "name": "PR Preview",
      "region": "us-east-1",
      "source": {
        "pr": {
          "commentEnabled": true,
          "labels": []
        }
      },
      "services": [
        {
          "id": "sirius-app-preview",
          "name": "Sirius Application (Preview)",
          "type": "fargate",
          "buildType": "nixpacks",
          "buildCommand": "npm run build",
          "startCommand": "npm run start:preview",
          "cpu": 0.25,
          "memory": 0.5,
          "minInstances": 1,
          "maxInstances": 1,
          "port": 3000,
          "healthCheckPath": "/api/health",
          "envVariables": {
            "NODE_ENV": "production",
            "MOCK_AUTH": "true"
          }
        }
      ]
    }
  ]
}
